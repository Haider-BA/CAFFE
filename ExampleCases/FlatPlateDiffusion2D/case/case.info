; Example case: FlatPlateDiffusion2D

RunControl
{
	terminationCondition iterations
	maxNumberOfIterations 30
	fileWriteInterval 10
	timeStep 0.01
	maxSimTime 48
	maxRealTimeHours 48
}

Solver
{
	timeAccurate OFF
}

Boundaries
{
	east
	{
		type fixed
		refValue 0
	}

	west
	{
		type fixed
		refValue 1
	}

	north
	{
		type fixed
		refValue 1
	}

	south
	{
		type fixed
		refValue 0
	}

	top
	{
		type empty
		refValue 0
	}

	bottom
	{
		type empty
		refValue 0
	}
}
