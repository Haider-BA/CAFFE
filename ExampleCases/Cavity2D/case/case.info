; Example Case: Cavity 2D

RunControl
{
	terminationCondition iterations
	maxNumberOfIterations 1000
	fileWriteInterval 1
	timeStep 2.5e-5
	maxSimTime 48
	maxRealTimeHours 48

}

Solver
{
	timeAccurate OFF
	relaxationFactorMomentum 0.9
	relaxationFactorPCorr 0.5
	rho 1.00
	mu 0.01
	numberOfInnerIterations 1
	numberOfPressureCorrections 3
}

Boundaries
{
	east
	{
		type wall
		refVector (0,0,0)
		refValue 0
	}

	west
	{
		type wall
		refVector (0,0,0)
		refValue 0
	}

	north
	{
		type wall
		refVector (10,0,0)
		refValue 0
	}

	south
	{
		type wall
		refVector (0,0,0)
		refValue 0
	}

	top
	{
		type empty
		refVector (0,0,0)
		refValue 0
	}

	bottom
	{
		type empty
		refVector (0,0,0)
		refValue 0
	}
}